{
  "name": "Mana Krushi Services",
  "short_name": "ManaKrushi",
  "description": "Your partner in shared travel. Find or offer a ride with ease.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#1f83bd",
  "display_override": [
    "standalone",
    "minimal-ui",
    "window-controls-overlay"
  ],
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "orientation": "portrait-primary",
  "id": "/?utm_source=pwa",
  "categories": [
    "travel",
    "business",
    "lifestyle"
  ],
  "scope_extensions": [
    { "origin": "*.manakrushi.com" },
    { "origin": "*.firebaseapp.com" }
  ],
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/screenshot1.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/screenshot2.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/screenshot-wide.png",
      "type": "image/png",
      "sizes": "1920x1080",
      "form_factor": "wide"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.app",
      "id": "com.example.app"
    }
  ],
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+manakrushi",
      "url": "/bookings?id=%s"
    }
  ],
  "widgets": [
    {
      "name": "Find a Ride",
      "short_name": "Find Ride",
      "description": "Quickly find a ride to your destination.",
      "tag": "find-ride",
      "template": "search-form",
      "icons": [
        { "src": "/icons/widget-icon-96.png", "sizes": "96x96" }
      ],
      "data": {
        "url-template": "/find-ride?to={to}",
        "form": [
          {
            "name": "to",
            "label": "Destination",
            "value": ""
          }
        ]
      }
    }
  ]
}
