{
  "theme_color": "#1f83bd",
  "background_color": "#ffffff",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "name": "Mana Krushi Services",
  "short_name": "ManaKrushi",
  "description": "Your partner in shared travel. Find or offer a ride with ease.",
  "lang": "en-US",
  "dir": "ltr",
  "orientation": "portrait-primary",
  "id": "/?utm_source=pwa",
  "icons": [
    {
      "src": "https://i.ibb.co/6Rrvs6tM/Whats-App-Image-2025-09-20-at-13-02-57-9dc142ff.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://i.ibb.co/6Rrvs6tM/Whats-App-Image-2025-09-20-at-13-02-57-9dc142ff.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://i.ibb.co/6Rrvs6tM/Whats-App-Image-2025-09-20-at-13-02-57-9dc142ff.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "https://i.ibb.co/6Rrvs6tM/Whats-App-Image-2025-09-20-at-13-02-57-9dc142ff.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "share_target": {
    "action": "/search",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "My Bookings",
      "short_name": "Bookings",
      "description": "View your upcoming and past bookings",
      "url": "/bookings?role=passenger",
      "icons": [{ "src": "/icons/bookings.png", "sizes": "192x192" }]
    },
    {
      "name": "Find a Ride",
      "short_name": "Search",
      "description": "Search for a new ride",
      "url": "/dashboard?role=passenger",
      "icons": [{ "src": "/icons/search.png", "sizes": "192x192" }]
    }
  ],
  "categories": [
    "travel",
    "social",
    "transportation"
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "prefer_related_applications": false,
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/*": [".txt", ".md"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+manakrushi",
      "url": "/protocol?type=%s"
    }
  ],
  "related_applications": [],
  "widgets": [
    {
      "name": "Upcoming Ride",
      "description": "Shows your next scheduled ride",
      "tag": "upcoming-ride",
      "template": "upcoming-ride-template",
      "ms_ac_template": "upcoming-ride-template",
      "data": {
        "url": "/widget-data/upcoming-ride.json"
      },
      "screenshots": [
        {
          "src": "/screenshots/widget-upcoming.png",
          "sizes": "600x400",
          "type": "image/png"
        }
      ]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "display_override": [
    "window-controls-overlay",
    "standalone"
  ],
  "note_taking": {
    "new_note_url": "/new-note",
    "needs_editing_flag": true
  },
  "scope_extensions": [
    { "origin": "*.manakrushi.com" },
    { "origin": "manakrushi.io" }
  ]
}
