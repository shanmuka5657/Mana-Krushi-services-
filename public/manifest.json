  "share_target": {
    "action": "/search",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+manakrushi",
      "url": "/search?q=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"]
      }
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "note_taking": {
    "new_note_url": "/new-note",
    "needs_editing_flag": true
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "widgets": [
    {
      "name": "My Next Ride",
      "description": "Shows details of your next upcoming ride.",
      "tag": "next-ride",
      "template": "next-ride-template",
      "ms_ac_template": "next-ride-template",
      "data": "/widgets/next-ride.json",
      "screenshots": [
        {
          "src": "/widgets/next-ride-preview.png",
          "label": "Next Ride Preview"
        }
      ],
      "icons": [
        {
          "src": "/widgets/next-ride-icon.png",
          "sizes": "128x128"
        }
      ],
      "auth": true,
      "update": 86400
