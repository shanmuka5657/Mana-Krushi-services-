{
    "theme_color": "#1E88E5",
    "background_color": "#FFFFFF",
    "display": "standalone",
    "scope": "/",
    "start_url": "/",
    "name": "Mana Krushi Services",
    "short_name": "MK Services",
    "description": "Your partner in shared travel. Find or offer a ride with ease.",
    "id": "com.manakrushi.app",
    "lang": "en",
    "dir": "ltr",
    "orientation": "any",
    "display_override": [
        "window-controls-overlay"
    ],
    "categories": [
        "travel",
        "business",
        "lifestyle",
        "navigation"
    ],
    "icons": [
        {
            "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "screenshots": [
        {
            "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
            "sizes": "1080x1920",
            "type": "image/jpeg",
            "form_factor": "narrow"
        },
        {
            "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
            "sizes": "1920x1080",
            "type": "image/jpeg",
            "form_factor": "wide"
        }
    ],
    "shortcuts": [
        {
            "name": "Find a Ride",
            "short_name": "Find",
            "description": "Search for available rides",
            "url": "/dashboard?role=passenger",
            "icons": [{ "src": "/images/icons/shortcut-search.png", "sizes": "192x192" }]
        },
        {
            "name": "My Bookings",
            "short_name": "Bookings",
            "description": "View your upcoming and past bookings",
            "url": "/bookings",
            "icons": [{ "src": "/images/icons/shortcut-bookings.png", "sizes": "192x192" }]
        },
        {
            "name": "My Profile",
            "short_name": "Profile",
            "description": "View and edit your profile",
            "url": "/profile",
            "icons": [{ "src": "/images/icons/shortcut-profile.png", "sizes": "192x192" }]
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+manakrushi",
            "url": "/search?q=%s"
        }
    ],
    "iarc_rating_id": "",
    "related_applications": [],
    "prefer_related_applications": false,
    "file_handlers": [
        {
            "action": "/handle-file",
            "accept": {
                "text/plain": [".txt"]
            }
        }
    ],
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "widgets": [
        {
            "name": "Upcoming Ride Widget",
            "description": "See your next ride at a glance",
            "tag": "upcoming-ride",
            "template": "upcoming-ride-template",
            "ms_ac_template": "upcoming-ride-ms-template.json",
            "data": "upcoming-ride-data.json",
            "type": "application/json"
        }
    ],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "note_taking": {
        "new_note_url": "/new-note"
    },
    "scope_extensions": [
        { "origin": "*.manakrushi.com" }
    ],
    "share_target": {
        "action": "/search",
        "method": "GET",
        "enctype": "application/x-www-form-urlencoded",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    }
}
