{
    "theme_color": "#1E88E5",
    "background_color": "#FFFFFF",
    "display": "standalone",
    "scope": "/",
    "start_url": "/",
    "name": "Mana Krushi Services",
    "short_name": "MK Services",
    "description": "Your partner in shared travel. Find or offer a ride with ease.",
    "id": "/?utm_source=pwa",
    "icons": [
        {
            "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "screenshots": [],
    "share_target": {
        "action": "/search/",
        "method": "GET",
        "enctype": "application/x-www-form-urlencoded",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "shortcuts": [
        {
            "name": "Find a Ride",
            "short_name": "Search",
            "description": "Find a ride to your destination",
            "url": "/dashboard?role=passenger",
            "icons": [
                {
                    "src": "/icons/search.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "My Bookings",
            "short_name": "Bookings",
            "description": "View your upcoming and past bookings",
            "url": "/bookings",
            "icons": [
                {
                    "src": "/icons/bookings.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "My Profile",
            "short_name": "Profile",
            "description": "View and edit your profile",
            "url": "/profile",
            "icons": [
                {
                    "src": "/icons/profile.png",
                    "sizes": "192x192"
                }
            ]
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+manakrushi",
            "url": "/search?q=%s"
        }
    ],
    "display_override": [
        "window-controls-overlay"
    ],
    "iarc_rating_id": "",
    "related_applications": [],
    "prefer_related_applications": false,
    "widgets": [
      {
        "name": "Upcoming Rides",
        "short_name": "Rides",
        "description": "See your next scheduled ride",
        "tag": "upcoming-ride",
        "template": "upcoming-ride-template",
        "ms_ac_template": "upcoming-ride-template.json",
        "data": "/widgets/upcoming-ride.json",
        "type": "application/json",
        "auth": true,
        "update": 3600
      }
    ],
    "edge_side_panel": {
        "preferred_width": 480
    },
    "note_taking": {
      "new_note_url": "/new-note",
      "needs_document": false
    },
    "scope_extensions": [
      { "origin": "*.manakrushi.com" },
      { "origin": "manakrushi.io" }
    ],
    "categories": [
        "business",
        "lifestyle",
        "navigation",
        "shopping",
        "travel"
    ],
    "orientation": "any",
    "lang": "en-US",
    "dir": "ltr"
}
