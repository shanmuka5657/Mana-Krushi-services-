{
  "theme_color": "#1E88E5",
  "background_color": "#FFFFFF",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "id": "/",
  "name": "Mana Krushi Services",
  "short_name": "MK Services",
  "description": "Your partner in shared travel. Find or offer a ride with ease.",
  "dir": "ltr",
  "lang": "en-US",
  "orientation": "any",
  "icons": [
    {
      "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
      "sizes": "192x192",
      "type": "image/jpeg"
    },
    {
      "src": "https://i.ibb.co/mrqBwfds/IMG-20250920-WA0025.jpg",
      "sizes": "512x512",
      "type": "image/jpeg"
    }
  ],
  "screenshots": [
    {
      "src": "https://ibb.co/TD8TS9J",
      "sizes": "1080x2400",
      "type": "image/jpeg",
      "form_factor": "narrow",
      "label": "Find a Ride"
    }
  ],
  "categories": [
    "travel",
    "navigation",
    "education"
  ],
  "shortcuts": [
    {
      "name": "Find a Ride",
      "short_name": "Search",
      "description": "Find a new ride to your destination",
      "url": "/dashboard?role=passenger",
      "icons": [{ "src": "/icons/search.png", "sizes": "192x192" }]
    },
    {
      "name": "My Bookings",
      "short_name": "Bookings",
      "description": "View your upcoming and past bookings",
      "url": "/bookings",
      "icons": [{ "src": "/icons/bookings.png", "sizes": "192x192" }]
    }
  ],
  "iarc_rating_id": "",
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+mk",
      "url": "/search?q=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/plain": [".txt"]
      }
    }
  ],
  "widgets": [
    {
      "name": "My Next Ride",
      "description": "Shows details about your next upcoming ride",
      "tag": "next-ride",
      "template": "next-ride-template",
      "ms_ac_template": "widgets/next-ride.json",
      "data": "widgets/next-ride-data.json",
      "type": "application/json"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "note_taking": {
    "new_note_url": "/new-note",
    "needs_editing_flag": true
  },
  "scope_extensions": [
    { "origin": "*.manakrushi.com" },
    { "origin": "manakrushi.io" }
  ],
  "share_target": {
    "action": "/search",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
