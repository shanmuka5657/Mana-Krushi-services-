{
  "theme_color": "#1f83bd",
  "background_color": "#ffffff",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "name": "Mana Krushi Services",
  "short_name": "MKS",
  "description": "Your partner in shared travel. Find or offer a ride with ease.",
  "orientation": "any",
  "id": "/?utm_source=pwa",
  "lang": "en-US",
  "dir": "ltr",
  "display_override": [
    "standalone",
    "minimal-ui"
  ],
  "categories": [
    "travel"
  ],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "related_applications": [],
  "scope_extensions": [
    { "origin": "*.google.com" },
    { "origin": "*.firebaseapp.com" }
  ],
  "shortcuts": [
    {
      "name": "Find a Ride",
      "short_name": "Find Ride",
      "description": "Search for available rides",
      "url": "/dashboard?role=passenger",
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Bookings",
      "short_name": "Bookings",
      "description": "View your upcoming and past bookings",
      "url": "/bookings",
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+mks",
      "url": "/search?q=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "name": "MKS Document",
      "accept": {
        "text/plain": [
          ".txt",
          ".md"
        ]
      }
    }
  ],
  "widgets": [
    {
      "name": "Upcoming Ride",
      "description": "View your next ride details.",
      "tag": "upcoming-ride",
      "template": "upcoming-ride-template",
      "ms_ac_template": "widgets/upcoming_ride.json",
      "data": "widgets/upcoming_ride_data.json",
      "screenshots": [
        {
          "src": "/images/widget-screenshot-1.png",
          "sizes": "600x400",
          "label": "Upcoming Ride Widget"
        }
      ],
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ],
      "auth": false,
      "update": 86400
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshot1.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow"
    },
    {
      "src": "/images/screenshot2.png",
      "type": "image/png",
      "sizes": "1920x1080",
      "form_factor": "wide"
    }
  ],
